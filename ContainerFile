ARG FEDORA_MAJOR_VERSION="${FEDORA_MAJOR_VERSION:-41}"

## Begin with a Kinoite Base Image
FROM quay.io/fedora/fedora-kinoite:${FEDORA_MAJOR_VERSION}

ARG OS_VERSION="${OS_VERSION:-${FEDORA_MAJOR_VERSION}}"

COPY os-release/os-release-template /etc/os-release
RUN sed -i 's/FEDORA_VERSION/'"${OS_VERSION}"'/g' /etc/os-release
COPY etc /etc
COPY usr /usr
COPY azurite-first-setup /usr/bin

#Add the pwa package for firefox.
RUN curl -fsSL https://github.com/filips123/PWAsForFirefox/releases/download/v2.14.1/firefoxpwa-2.14.1-1.x86_64.rpm -o /tmp/firefoxpwa.rpm && \
    rpm-ostree install /tmp/firefoxpwa.rpm && \
    rm -f /tmp/firefoxpwa.rpm 

#Add the long term support kernel.
RUN curl -fsSl https://copr.fedorainfracloud.org/coprs/kwizart/kernel-longterm-6.12/repo/fedora-42/kwizart-kernel-longterm-6.12-fedora-42.repo -o /etc/yum.repos.d/kwizart-kernel-longterm-6.12-fedora-42.repo
RUN chown root:root /etc/yum.repos.d/* && \
        chmod 744 /etc/yum.repos.d/* && \
        chcon -R system_u:object_r:system_conf_t:s0 /etc/yum.repos.d/

RUN rpm-ostree override remove \
        kernel \
        kernel-{core,modules,modules-extra} \
        --install kernel-longterm \
        --install kernel-longterm-core \
        --install kernel-longterm-modules \
        --install kernel-longterm-modules-extra \
        --install kernel-longterm-devel-matched

#Clean up packages to use the ones I want.
RUN rpm-ostree override remove \
        firefox \
        firefox-langpacks
        
RUN rpm-ostree override remove \
        plasma-discover-rpm-ostree \
        toolbox

#Add extra core packages
RUN  rpm-ostree install \
        distrobox \
        rsms-inter-fonts \
        fish \
        ksshaskpass \
        corectrl \
        plasma-firewall-firewalld

#Add apps that have to be layered to work well, or that I prefer to be layered.
RUN rpm-ostree install \
        vorta \
        borgbackup \
        logiops \
        solaar

#Setup auto updates
RUN sed -i 's/#AutomaticUpdatePolicy.*/AutomaticUpdatePolicy=stage/' /etc/rpm-ostreed.conf && \
    systemctl enable rpm-ostreed-automatic.timer && \
    systemctl enable swtpm-workaround && \
    rm -rf \
        /tmp/* \
        /var/*

RUN ostree container commit